{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile",
			"type": "shell",
			"group": "build",
			"command": "${workspaceFolder}/Compile.bat",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Compile from scratch",
			"type": "shell",
			"group": "build",
			"command": "${workspaceFolder}/Recompile.bat",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run",
			"type": "shell",
			"group": "build",
			"command": "${workspaceFolder}/Run.bat",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": "$msCompile"
		},
	]
}