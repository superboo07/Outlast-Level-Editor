{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Scripts",
            "type": "shell",
            "command": "../../Binaries/Win32/UDK.exe",
            "args": ["make", "-NOPAUSEONSUCCESS"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Recompile All Scripts",
            "type": "shell",
            "command": "../../Binaries/Win32/UDK.exe",
            "args": ["make", "full", "-NOPAUSEONSUCCESS"],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Editor",
            "type": "process",
            "command": "../../Binaries/Win32/UDK.exe",
            "args": ["editor"],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
    ]
}